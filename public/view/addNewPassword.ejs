                   <div class="container">
                        <div class="row">
                          <h2 class="text-center"> Password Management System</h2>
                            <div id="loginbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                                <div class="panel panel-info">
                                    <div class="panel-heading">
                                        <div class="panel-title"> Login</div>
                                         </div>  
                                    <div class="panel-body" >
                                          <form action="/addNewPassword" id="EmployeeForm" class="form-horizontal" method="post"  role="form">
                                            <% if( success !=""){%>
                                              <p style="    display: flex;
                                              justify-content: center;
                                          "><%= success%></p>

                                         <% }%>
                                        <div class="form-group">
                                          <label for="username" class="col-md-3 control-label">Password Category</label>
                                          <div class="col-md-9">
                                             <select class="form-control" name="pass_cat">
                                                 <option value="">Choose Password Category</option>
                                                 <% if(records.length > 0){
                                                  records.forEach(function(row){

                                                 
                                                 %>
                                                 <option value="<%= row.password %>"><%= row.password %></option>
                                                  <%  }) }%>
                                                 
                                                </select>
                                          </div>
                                      </div>
                                           
                                        
                                            <div class="form-group">
                                              <label for="username" class="col-md-3 control-label">Password Details</label>
                                              <div class="col-md-9">
                                                  <textarea class="form-control" id="editor" name="passwordDetails" rows="5" placeholder="Enter Your Password Details"></textarea>
                                              </div>
                                          </div>
                                            
                                            </div>  <div class="form-group">
                                                <!-- Button -->                                        
                                                <div class="col-md-offset-3 col-md-9">
